<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/thumbnail_meja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip" >

        <ImageView
            android:id="@+id/picture_meja_on_listview"
            android:layout_width="50dip"
            android:layout_height="50dip" />
    </LinearLayout>
    <!-- Image icon sebelah kiri -->

    <!-- label Nomor -->

    <TextView
        android:id="@+id/urutan_meja_listview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_meja"
        android:layout_toRightOf="@+id/thumbnail_meja"
        android:text="No : "
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- nomor urutan -->

    <TextView
        android:id="@+id/urutan_meja_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/urutan_meja_listview_label"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- label nama meja -->

    <TextView
        android:id="@+id/nama_meja_listview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urutan_meja_listview_label"
        android:layout_toRightOf="@+id/thumbnail_meja"
        android:text=""
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- menu makanan -->

    <TextView
        android:id="@+id/nama_meja_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urutan_meja_listview"
        android:layout_toRightOf="@+id/nama_meja_listview_label"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/arrow_on_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="1dp" />
    
</RelativeLayout>
