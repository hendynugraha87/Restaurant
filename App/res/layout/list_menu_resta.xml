<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/thumbnail_menu_resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip" >
		
        <!-- Image icon sebelah kiri -->
        <ImageView
            android:id="@+id/picture_menu_resta_on_listview"
            android:layout_width="50dip"
            android:layout_height="50dip" />
    </LinearLayout>
   
    <!-- label nama menu -->
    <TextView
        android:id="@+id/nama_menu_resta_listview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_menu_resta"
        android:layout_toRightOf="@+id/thumbnail_menu_resta"
        android:text=""
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- menu makanan -->
    <TextView
        android:id="@+id/nama_menu_resta_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nama_menu_resta_listview_label"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <!-- label keterangan menu -->
    <TextView
        android:id="@+id/keterangan_menu_resta_listview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_menu_resta"
        android:layout_toRightOf="@+id/thumbnail_menu_resta"
        android:layout_below="@+id/nama_menu_resta_listview_label"
        android:text=""
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <!-- keterangan menu makanan -->
    <TextView
        android:id="@+id/keterangan_menu_resta_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/keterangan_menu_resta_listview_label"
        android:layout_below="@+id/nama_menu_resta_listview"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Image icon sebelah kanan -->
    <ImageView
        android:id="@+id/arrow_on_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="1dp" />
    

</RelativeLayout>
