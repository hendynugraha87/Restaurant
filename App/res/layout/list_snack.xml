<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/thumbnail_snack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip" >

        <ImageView
            android:id="@+id/picture_menu_snack_on_listview"
            android:layout_width="50dip"
            android:layout_height="50dip" />
    </LinearLayout>
    <!-- Image icon sebelah kiri -->


    <!-- label Menu Nomor -->

    <TextView
        android:id="@+id/urutan_snack_listview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_snack"
        android:layout_toRightOf="@+id/thumbnail_snack"
        android:text="Menu no : "
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- nomor urutan -->

    <TextView
        android:id="@+id/urutan_snack_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/urutan_snack_listview_label"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- label nama makanan -->

    <TextView
        android:id="@+id/nama_snack_listview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urutan_snack_listview_label"
        android:layout_toRightOf="@+id/thumbnail_snack"
        android:text="Menu : "
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- menu makanan -->

    <TextView
        android:id="@+id/nama_snack_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urutan_snack_listview"
        android:layout_toRightOf="@+id/nama_snack_listview_label"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- label harga makanan -->

    <TextView
        android:id="@+id/harga_snack_listview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_snack_listview_label"
        android:layout_toRightOf="@+id/thumbnail_snack"
        android:text="Harga : "
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- harga makanan -->

    <TextView
        android:id="@+id/harga_snack_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_snack_listview"
        android:layout_toRightOf="@+id/harga_snack_listview_label"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/arrow_on_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="1dp" />

    <!-- ratingbar icon sebelah kanan -->
    <RatingBar 
        android:id="@+id/rating_snack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/arrow_on_listview"
        android:numStars="5"
        android:rating="4"
        android:stepSize="1"
        style="?android:attr/ratingBarStyleSmall"
        />
</RelativeLayout>
